---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllPresentations } from '../../data/presentations';
import { url } from '../../utils/path';

const presentations = getAllPresentations();
---

<BaseLayout title="演示文稿" description="知识库演示文稿合集 - 用幻灯片快速了解核心技术概念">
  <section class="presentations-page">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">演示文稿</h1>
        <p class="page-description">用幻灯片快速了解核心技术概念</p>
      </header>

      {presentations.length === 0 ? (
        <div class="empty-state">
          <p>暂无演示文稿，敬请期待...</p>
        </div>
      ) : (
        <div class="presentations-grid">
          {presentations.map((pres) => (
            <a href={url(`/presentations/${pres.slug}`)} class="presentation-card">
              <div class="card-cover">
                {pres.coverImage ? (
                  <img src={url(pres.coverImage)} alt={pres.title} loading="lazy" />
                ) : (
                  <div class="card-cover-placeholder">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                      <rect x="2" y="3" width="20" height="14" rx="2" />
                      <path d="M8 21h8M12 17v4" />
                    </svg>
                  </div>
                )}
                <div class="card-slide-count">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="3" width="20" height="14" rx="2" />
                    <path d="M8 21h8M12 17v4" />
                  </svg>
                  {pres.slideCount} 页
                </div>
              </div>
              <div class="card-body">
                <h2 class="card-title">{pres.title}</h2>
                <p class="card-description">{pres.description}</p>
                <div class="card-meta">
                  <span class="card-date">
                    {new Date(pres.date).toLocaleDateString('zh-CN', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </span>
                  {pres.tags && (
                    <div class="card-tags">
                      {pres.tags.map((tag) => (
                        <span class="card-tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .presentations-page {
    padding: var(--space-8) 0 var(--space-24);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .page-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .empty-state {
    text-align: center;
    padding: var(--space-16) 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .presentations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: var(--space-8);
    max-width: 1200px;
    margin: 0 auto;
  }

  .presentation-card {
    display: block;
    background: var(--card-bg, var(--background));
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: all var(--duration-normal) var(--ease-out);
    border-bottom: none !important;
  }

  .presentation-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
    background: var(--card-bg, var(--background)) !important;
  }

  .card-cover {
    position: relative;
    aspect-ratio: 16 / 9;
    background: var(--surface);
    overflow: hidden;
  }

  .card-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .presentation-card:hover .card-cover img {
    transform: scale(1.05);
  }

  .card-cover-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    opacity: 0.4;
  }

  .card-slide-count {
    position: absolute;
    bottom: 8px;
    right: 8px;
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    border-radius: 20px;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    font-size: 0.75rem;
    font-weight: 500;
    backdrop-filter: blur(4px);
  }

  .card-body {
    padding: var(--space-5);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-2);
    line-height: 1.4;
  }

  .card-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .card-date {
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  .card-tags {
    display: flex;
    gap: 0.375rem;
    flex-wrap: wrap;
  }

  .card-tag {
    font-size: 0.6875rem;
    padding: 2px 8px;
    background: var(--surface);
    color: var(--text-secondary);
    border-radius: var(--radius-full);
    font-weight: 500;
  }

  @media (max-width: 480px) {
    .presentations-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
