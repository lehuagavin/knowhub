---
interface Props {
  slug: string;
  title: string;
  summary: string;
  tags: string[];
  date: string;
  readingTime?: string;
  topicSlug: string;
  topicName?: string;
  topicIcon?: string;
  topicColor?: string;
}

const { slug, title, summary, tags, date, readingTime, topicSlug, topicName, topicIcon, topicColor } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('zh-CN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/topics/${topicSlug}/${slug}`} class="article-card">
  <div class="article-header">
    {topicName && (
      <span class="article-topic" style={topicColor ? `color: ${topicColor}` : ''}>
        {topicIcon && <span class="article-topic-icon">{topicIcon}</span>}
        {topicName}
      </span>
    )}
    <span class="article-date">{formattedDate}</span>
  </div>
  <h3 class="article-title">{title}</h3>
  <p class="article-summary">{summary}</p>
  <div class="article-footer">
    <div class="article-tags">
      {tags.slice(0, 3).map((tag) => (
        <span class="article-tag">{tag}</span>
      ))}
    </div>
    {readingTime && <span class="article-reading-time">{readingTime}</span>}
  </div>
</a>

<style>
  .article-card {
    display: block;
    background: var(--surface);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--duration-normal) var(--ease-out);
    border-left: 3px solid transparent;
  }

  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-left-color: var(--primary);
  }

  .article-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
  }

  .article-topic {
    font-size: 0.8125rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .article-topic-icon {
    font-size: 0.875rem;
  }

  .article-date {
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  .article-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-2);
    color: var(--text-primary);
    line-height: 1.4;
  }

  .article-summary {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-4);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .article-tags {
    display: flex;
    gap: 0.375rem;
    flex-wrap: wrap;
  }

  .article-tag {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
    background: var(--background);
    color: var(--text-secondary);
    border-radius: var(--radius-full);
    font-weight: 500;
  }

  .article-reading-time {
    font-size: 0.75rem;
    color: var(--text-secondary);
    white-space: nowrap;
  }

  :global([data-theme="motherduck"]) .article-card {
    border: 2px solid var(--text-primary);
    border-radius: 0;
    border-left: 2px solid var(--text-primary);
    box-shadow: var(--shadow-sm);
  }

  :global([data-theme="motherduck"]) .article-card:hover {
    transform: translate(4px, -4px);
    box-shadow: rgb(56, 56, 56) -8px 8px 0px 0px;
    border-left-color: var(--text-primary);
  }

  :global([data-theme="motherduck"]) .article-tag {
    border: 1px solid var(--text-primary);
    border-radius: 0;
  }
</style>
