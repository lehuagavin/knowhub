---
interface Props {
  projectNumber: number;
  title: string;
  description: string;
  techStack: string[];
  href: string;
  thumbnail?: string;
}

const { projectNumber, title, description, techStack, href, thumbnail } = Astro.props;
---

<a href={href} class="project-card">
  {thumbnail && (
    <div class="project-thumbnail">
      <img src={thumbnail} alt={title} />
      <div class="project-overlay">
        <span class="view-project">查看项目 →</span>
      </div>
    </div>
  )}
  <div class="project-content">
    <div class="project-number">项目 {projectNumber}</div>
    <h3 class="project-title">{title}</h3>
    <p class="project-description">{description}</p>
    <div class="project-tech">
      {techStack.map((tech) => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>
  </div>
</a>

<style>
  .project-card {
    display: block;
    background: var(--surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    transition: all var(--duration-normal) var(--ease-out);
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .project-thumbnail {
    position: relative;
    width: 100%;
    height: 240px;
    background: linear-gradient(135deg,
      var(--cursor-purple) 0%,
      var(--notebooklm-blue) 100%
    );
    overflow: hidden;
  }

  .project-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }

  .project-card:hover .project-thumbnail img {
    transform: scale(1.05);
  }

  .project-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--duration-normal) var(--ease-out);
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .view-project {
    color: white;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .project-content {
    padding: var(--space-8);
  }

  .project-number {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primary);
    background: rgba(0, 113, 227, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-3);
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
  }

  .project-description {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tech-tag {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-secondary);
    background: var(--background);
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-full);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  @media (prefers-color-scheme: dark) {
    .tech-tag {
      border-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
