---
interface Props {
  title: string;
  description: string;
  primaryCta: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
  gradient?: boolean;
}

const { title, description, primaryCta, secondaryCta, gradient = true } = Astro.props;
---

<section class={`cta-section ${gradient ? 'gradient' : ''}`}>
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-description">{description}</p>
      <div class="cta-actions">
        <a href={primaryCta.href} class="btn btn-primary btn-lg">
          {primaryCta.text}
        </a>
        {secondaryCta && (
          <a href={secondaryCta.href} class="btn btn-secondary btn-lg">
            {secondaryCta.text}
          </a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--space-24) 0;
  }

  .cta-section.gradient {
    background: linear-gradient(135deg,
      rgba(139, 92, 246, 0.1) 0%,
      rgba(59, 130, 246, 0.1) 100%
    );
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .cta-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    line-height: 1.6;
  }

  .cta-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .cta-section {
      padding: var(--space-16) 0;
    }

    .cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .cta-actions .btn {
      width: 100%;
    }
  }
</style>
